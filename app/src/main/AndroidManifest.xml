<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.craigmiller160.contacts5">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- TODO configure full app backup on marshmallow option -->
    <application
        android:name=".ContactsApplication"
        android:allowBackup="true"
        android:icon="@drawable/contacts5icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ContactsActivity"
            android:label="@string/contacts_activity_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DisplaySettingsActivity"
            android:label="@string/display_settings_activity_name"
            android:parentActivityName=".activity.ContactsActivity"
            android:theme="@style/AppTheme.PreferencesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ContactsActivity" />
        </activity>
        <activity
            android:name=".activity.ContactsInGroupActivity"
            android:label="@string/contacts_activity_name"
            android:theme="@style/AppTheme.PreferencesTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ContactsActivity" />
        </activity>
    </application>

</manifest>